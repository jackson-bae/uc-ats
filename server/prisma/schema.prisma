generator client {
  provider = "prisma-client-js"
  // output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestMessage {
  id   String @id @default(uuid())
  text String
}

model Applicant {
  id              String   @id @default(uuid())
  
  // Applicant info
  email           String   @unique
  
  // Application data
  status          ApplicationStatus @default(SUBMITTED)
  responseID      String
  responses       Json     // Store all form responses as JSON
  
  // Timestamps
  submittedAt     DateTime @default(now())
  
}

enum ApplicationStatus {
  SUBMITTED
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  WAITLISTED
}